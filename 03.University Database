CREATE TABLE Department (
    DepartmentID VARCHAR(50) NOT NULL PRIMARY KEY,
    DepartmentName VARCHAR(50),
    HeadOfDepartment VARCHAR(50),
    FacultyCount INT
);

CREATE TABLE Student (
    StudentID INT NOT NULL PRIMARY KEY,
    StudentName VARCHAR(50),
    DOB DATE,
    Gender VARCHAR(50),
    Address VARCHAR(50),
    Phone INT,
    Email VARCHAR(50),
    DepartmentID VARCHAR(50),
    FOREIGN KEY (DepartmentID) REFERENCES Department(DepartmentID) ON DELETE CASCADE
);


CREATE TABLE Course (
    CourseID INT NOT NULL PRIMARY KEY,
    CourseName VARCHAR(50),
    Credits INT,
    DepartmentID VARCHAR(50),
    FOREIGN KEY (DepartmentID) REFERENCES Department(DepartmentID) ON DELETE CASCADE
);

CREATE TABLE Faculty (
    FacultyID INT NOT NULL PRIMARY KEY,
    FacultyMemberName VARCHAR(50),
    Designation VARCHAR(50),
    Email VARCHAR(100),
    Phone INT,
    DepartmentID VARCHAR(50),
    FOREIGN KEY (DepartmentID) REFERENCES Department(DepartmentID) ON DELETE CASCADE
);

CREATE TABLE Enrollment (
    EnrollmentID INT PRIMARY KEY NOT NULL,
    StudentID INT,
    CourseID INT,
    Semester VARCHAR(50),
    Grade VARCHAR(50),
    FOREIGN KEY (StudentID) REFERENCES Student(StudentID) ON DELETE CASCADE,
    FOREIGN KEY (CourseID) REFERENCES Course(CourseID) ON DELETE CASCADE
);


CREATE TABLE Classroom (
    RoomNumber VARCHAR(50) NOT NULL PRIMARY KEY,
    Building VARCHAR(50),
    Capacity INT
);


